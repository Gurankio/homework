    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="600.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="600.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
    </rowConstraints>
    <children>
        <TableView GridPane.rowIndex="0">
            <columns>
                <TableColumn prefWidth="50.0" text="ID" />
                <TableColumn prefWidth="100.0" text="Tipo" />
                <TableColumn prefWidth="100.0" text="Nome" />
                <TableColumn prefWidth="100.0" text="Cognome" />
                <TableColumn prefWidth="100.0" text="Nascita" />
                <TableColumn prefWidth="75.0" text="Costo" />
                <TableColumn prefWidth="75.0" text="Sconto" />
            </columns>
        </TableView>
        <Button mnemonicParsing="false" text="Salva" GridPane.columnIndex="1" />
        <HBox GridPane.columnSpan="2" GridPane.rowIndex="1">
            <TextField prefHeight="27.0" prefWidth="50.0" editable="false" />
            <TextField prefHeight="27.0" prefWidth="100.0" />
            <TextField prefHeight="27.0" prefWidth="100.0" />
            <TextField prefHeight="27.0" prefWidth="100.0" />
            <TextField prefHeight="27.0" prefWidth="100.0" />
            <TextField prefHeight="27.0" prefWidth="75.0" editable="false" />
            <TextField prefHeight="27.0" prefWidth="75.0" editable="false" />
        </HBox>
        <Button mnemonicParsing="false" text="Button" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </children>
</GridPane>
